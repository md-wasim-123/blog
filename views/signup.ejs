<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/header.ejs') %>
</head>

<body>
  <% if(msg.length>0){ %>
    <div id="alert-border-2"
      class="flex items-center p-4 mb-4 text-red-800 border-t-4 border-red-300 bg-red-50 dark:text-red-400 dark:bg-gray-800 dark:border-red-800 "
      role="alert">
      <svg class="flex-shrink-0 w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor"
        viewBox="0 0 20 20">
        <path
          d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z" />
      </svg>
      <div class="ml-3 text-xl font-medium">
        <%- msg %>
      </div>
      <button type="button"
        class="ml-auto -mx-1.5 -my-1.5 bg-red-50 text-red-500 rounded-lg focus:ring-2 focus:ring-red-400 p-1.5 hover:bg-red-200 inline-flex items-center justify-center h-8 w-8 dark:bg-gray-800 dark:text-red-400 dark:hover:bg-gray-700"
      >
        <span class="sr-only">Dismiss</span>
        <i id="del" class="fa-solid fa-circle-xmark text-2xl "></i>
      </button>
    </div>
    <% } %>

      <section class="h-screen">
        <div class="container h-full px-7 ">
          <div class="g-6 flex h-full flex-wrap items-center justify-center lg:justify-between">
            <!-- Left column container with background-->
            <div class="mb-12 md:mb-0 md:w-8/12 lg:w-6/12 ">
              <lottie-player src="https://lottie.host/25c44bd2-265c-4a52-b652-d4006707518f/SFKIXzxRyU.json"
                background="#FFFFFF" speed="1" style="width:100%; height: 500px" direction="1" mode="normal" loop
                autoplay></lottie-player>
            </div>

            <!-- Right column container with form -->
            <div class="md:w-8/12 lg:ml-6 lg:w-5/12 mb-8 pb-6 box p-8 md:mt-5">
              <form action="/signup" method="post">
                <p class="w-32 h-10 text-2xl font-bold text-indigo-700">Sign Up</p>

                <!-- Email input -->
                <div class="mb-6 flex w-full">
                  <div class="p-1">
                    <label for="" class=" mb-2 text-xl font-medium text-gray-900 dark:text-gray-6 00">First Name</label>
                    <input type="text" name="fname" id="large-input"
                      class="p-4 bg-transparent border-4 text-gray-900 sm:text-sm rounded-lg focus:ring-2 focus:ring-fuchsia-50 focus:border-fuchsia-300  w-full">
                  </div>
                  <div class="p-1">
                    <label for="" class=" mb-2 text-xl font-medium text-gray-900 dark:text-gray-6 00">Last Name</label>
                    <input type="text" name="lname" id="large-input"
                      class="p-4 bg-transparent border-4 text-gray-900 sm:text-sm rounded-lg focus:ring-2 focus:ring-fuchsia-50 focus:border-fuchsia-300  w-full">
                  </div>
                </div>

                <!-- Email input -->
                <div class="relative mb-6" data-te-input-wrapper-init>
                  <label for="" class=" mb-2 text-xl font-medium text-gray-900 dark:text-gray-6 00">Enter Email</label>
                  <input type="email" name="email" id="large-input"
                    class="p-4 bg-transparent border-4 text-gray-900 sm:text-sm rounded-lg focus:ring-2 focus:ring-fuchsia-50 focus:border-fuchsia-300  w-full">

                </div>


                <!-- Password input -->
                <div class="relative mb-6" data-te-input-wrapper-init>
                  <label for="" class=" mb-2 text-xl font-medium text-gray-900 dark:text-gray-6 00">Password</label>
                  <input type="password" name="password" id="large-input"
                    class="p-4 bg-transparent border-4 text-gray-900 sm:text-sm rounded-lg focus:ring-2 focus:ring-fuchsia-50 focus:border-fuchsia-300  w-full">

                </div>
                <div class="relative mb-6" data-te-input-wrapper-init>
                  <label for="" class=" mb-2 text-xl font-medium  dark:text-gray-6 00">Confirm Password</label>
                  <input type="password" name="Cpassword" id="large-input"
                    class="p-4 bg-transparent border-4  sm:text-sm rounded-lg focus:ring-2 focus:ring-fuchsia-50 focus:border-fuchsia-300  w-full ">

                </div>

      

                <!-- Submit button -->
                <button type="submit mb"
                  class="inline-block w-full rounded bg-indigo-700 px-7 pb-2.5 pt-3 text-sm font-medium uppercase leading-normal text-black shadow-[0_4px_9px_-4px_#3b71ca] transition duration-150 ease-in-out hover:bg-rose-300 hover:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.3),0_4px_18px_0_rgba(59,113,202,0.2)]  "
                  data-te-ripple-init data-te-ripple-color="light">
                  Sign in
                </button>

                <!-- Divider -->

              </form>
            </div>
          </div>
        </div>
      </section>
 
</body>
</html>